---
import { barbers } from '../data/site-data.ts'
---

<section class='barbers-section bg-black px-8 py-20 text-white'>
  <div class='mx-auto max-w-7xl'>
    <div class='grid grid-cols-1 gap-16 lg:grid-cols-2'>
      <div class='barbers-grid'>
        <div class='grid grid-cols-2 gap-0'>
          {
            barbers.map((barber, index) => (
              <div
                class='barber-card relative cursor-pointer overflow-hidden group'
                data-barber-index={index}
              >
                <img
                  src={barber.imgsrc}
                  alt={barber.name}
                  class='h-64 w-full object-cover transition-all duration-300 group-hover:scale-110'
                />
                <div class='absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 transition-opacity duration-300 hover:opacity-100' />
                <div class='font-secondary absolute bottom-0 left-0 right-0 transform p-4 text-white transition-transform duration-300 hover:translate-y-0'>
                  <h3 class='text-lg font-bold capitalize'>{barber.name}</h3>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class='barber-info'>
        <div class="relative mb-4">
          <h2 class='text-large leading-none font-secondary'>OUR BARBERS</h2>
          <div class="absolute right-full h-0.5 w-40 bg-primary top-1/2 -translate-y-1/2"></div>
        </div>

        <div class='barber-details bg-dark p-6 py-10 transition-opacity duration-500 ease-in-out'>
          <h3
            class='barber-name mb-4 text-2xl uppercase font-secondary'
            id='selected-barber-name'
          >
            {barbers[0].name}
          </h3>

          <!-- Redes sociales -->
          <div class='social-links mb-10'>
            <div class='mb-2 flex items-center gap-4' id='instagram-link'>
              <svg class='h-5 w-5 text-primary' fill='currentColor' viewBox='0 0 24 24'>
