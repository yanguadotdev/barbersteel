                ></path>
                <path
                  d='M12 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z'
                ></path>
              </svg>
              <span class='text-white/75' id='instagram-handle'>{barbers[0].socials.ig}</span>
            </div>
            <div class='mb-2 flex items-center gap-4' id='twitter-link'>
              <svg class='h-5 w-5 text-primary' fill='currentColor' viewBox='0 0 24 24'>
                <path
                  d='M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z'
                ></path>
              </svg>
              <span class='text-white/75' id='twitter-handle'>{barbers[0].socials.twiter}</span>
            </div>
            <div class='mb-2 flex items-center gap-4' id='facebook-link'>
              <svg class='h-5 w-5 text-primary' fill='currentColor' viewBox='0 0 24 24'>
                <path
                  d='M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z'
                ></path>
              </svg>
              <span class='text-white/75' id='facebook-handle'>{barbers[0].socials.facebook}</span>
            </div>
          </div>

          <!-- Certificados/Awards -->
          <div class='awards-section'>
            <h4 class='mb-4 text-lg font-secondary'>
              CERTIFICATES / AWARDS
            </h4>
            <div class='awards-list space-y-1' id='awards-list'>
              {
                barbers[0].awards.map((award) => (
                  <p class='text-sm leading-relaxed text-gray-300'>{award}</p>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { barbers as barbersData } from '@/data/site-data'
  import { $, $$ } from '@/lib/dom-selector'

  const barberCards = $$('.barber-card')
  const barberName = $('#selected-barber-name') as HTMLElement
  const instagramHandle = $('#instagram-handle') as HTMLElement
  const twitterHandle = $('#twitter-handle') as HTMLElement
  const facebookHandle = $('#facebook-handle') as HTMLElement
  const awardsList = $('#awards-list') as HTMLElement

  function updateBarberInfo(barberIndex: number) {
    const barber = barbersData[barberIndex]

    // Fade out effect
    const barberDetails = $('.barber-details') as HTMLElement
    barberDetails.style.opacity = '0'

    setTimeout(() => {
      // Update content
      barberName.textContent = barber.name.toUpperCase()
      instagramHandle.textContent = barber.socials.ig
      twitterHandle.textContent = barber.socials.twiter
      facebookHandle.textContent = barber.socials.facebook

      // Update awards
      awardsList.innerHTML = ''
      barber.awards.forEach((award) => {
        const p = document.createElement('p')
        p.className = 'text-gray-300 text-sm leading-relaxed'
        p.textContent = award
        awardsList.appendChild(p)
      })

      // Fade in effect
      barberDetails.style.opacity = '1'
    }, 200)
  }

  // Add hover event listeners to barber cards
  barberCards.forEach((card, index) => {
    card.addEventListener('mouseenter', () => {
      updateBarberInfo(index)

      // Remove active class from all cards
      barberCards.forEach((c) => c.classList.remove('active'))
      // Add active class to hovered card
      card.classList.add('active')
    })
  })

  // Set initial active state
  barberCards[0].classList.add('active')
</script>