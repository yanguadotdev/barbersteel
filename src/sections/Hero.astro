---
import Button from '@/components/Button.astro'
import Slider from '@/components/Slider.astro'
---

<section id='hero' class='relative z-10 min-h-screen pt-24'>
  <div>
    <div
      class='font-secondary container relative z-10 flex max-w-7xl items-center gap-16 leading-none'
    >
      <h1 class='text-large pointer-events-none max-w-min'>FORJAMOS&nbsp;TU LOOK&nbsp;PERFECTO</h1>
      <Button withBackground />
    </div>

    <div class='relative -mt-12'>
      <div class='container absolute inset-x-0 bottom-5/6 right-0 flex h-60 max-w-7xl justify-end'>
        <div class='dot-grid aspect-square h-full'></div>
      </div>
      <Slider />
    </div>
  </div>
</section>

<script>
  import { $ } from '@/lib/dom-selector'

  const slider = $('[data-slider]') as HTMLElement
  const sliderTrack = $('[data-slider-content]') as HTMLElement

  sliderTrack.classList.add('animate-marquee')
  slider.appendChild(sliderTrack.cloneNode(true))
</script>
