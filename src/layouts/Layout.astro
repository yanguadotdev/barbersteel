---
import { ClientRouter } from 'astro:transitions'
import Analytics from '@vercel/analytics/astro'
import '@/styles/global.css'

interface Props {
  title: string
  description?: string
  canonical?: string
  robots?: string
}

const {
  title = 'Title',
  description = 'Experimenta el corte perfecto en BARBERSTEEL. Cortes profesionales, arreglo de barba y afeitado tradicional para el hombre moderno. Barberos expertos, servicio premium, resultados impecables.',
  canonical,
  robots,
} = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>

    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <link rel='shortcut icon' href='/favicon.ico' />

    <!-- Preload fonts so that the font change is not visible when the page loads -->
    <link
      rel='preload'
      href='/fonts/Inter-variable.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      href='/fonts/BebasNeue.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />

    <meta name='description' content={description} />
    {canonical && <link rel='canonical' href={canonical} />}
    {robots && <meta name='robots' content={robots} />}

    <!-- METATAGS -->
    <meta property='og:url' content='https://www.[dominio].com' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='BARBERSTEEL - Barbería Premium para el Hombre Moderno | Servicios de Corte Profesional' />
    <meta property='og:description' content='Experimenta el corte perfecto en BARBERSTEEL. Cortes profesionales, arreglo de barba y afeitado tradicional para el hombre moderno. Barberos expertos, servicio premium, resultados impecables.' />
    <meta property='og:image' content='https://www.[dominio].com/og.jpg' />
    <meta property='og:locale' content='en_EN' />
    <meta property='og:site_name' content='Site Name' />

    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:title' content='BARBERSTEEL - Barbería Premium para el Hombre Moderno | Servicios de Corte Profesional' />
    <meta name='twitter:description' content='Experimenta el corte perfecto en BARBERSTEEL. Cortes profesionales, arreglo de barba y afeitado tradicional para el hombre moderno. Barberos expertos, servicio premium, resultados impecables.' />
    <meta name='twitter:image' content='https://www.[dominio].com/og.jpg' />

    <ClientRouter />
    <Analytics />
  </head>
  <body class="relative">
    <slot />

    <!-- square -->
    <div class='bg-dark absolute left-0 top-0 aspect-[2/4] 2sm:aspect-[2/3] w-2/5'></div>
  </body>
</html>
